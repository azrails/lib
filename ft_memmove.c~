#include "libft.h"

void	*ft_memmove(void *destination, const void *source, size_t n)
{
	unsigned char		*tmp;
	unsigned char		*tmp2;
	size_t				i;

	i = 0;
	tmp = (unsigned char *)destination;
	tmp2 = (unsigned char *)source;
	if ((n == 0) || (destination == source))
		return (destination);
	if (tmp < tmp2)
	{
		while (i < n)
		{
			tmp[i] = tmp2[i];
			i++;
		}
	}
	else
	{
		i = n;
		while (i > 0)
		{
			tmp[i - 1] = tmp2[i - 1];
			i--;
		}
	}
	return (destination);
}
